{% extends 'base.html.twig' %}

{% block title  "Page de Connexion" %}

{% block main %}
	<div class="container mt-5 w-50">
		<div>
			<h1>Connexion</h1>
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
		</div>
		<div class="register-form">
			<form action="{{ path('user_login') }}" method="post">
				<label for="username" class="mt-3">Email:</label>
				<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>

				<label for="password" class="mt-3">Password:</label>
				<input class="form-control" type="password" id="password" name="_password" required>

				{# If you want to control the URL the user is redirected to on success #}
				<input type="hidden" name="_target_path" value="/account">
                
				<button type="submit" class="btn btn-success my-3">Se Connecter</button>
                <a href="{{path('user_register')}}">S'inscrire</a>
			</form>
		</div>
	</div>
{% endblock %}

